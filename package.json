{
  "name": "hearthstone-tracker",
  "version": "0.2.0",
  "description": "An electron based Hearthstone tracker",
  "main": "bootstrap-babel.js",
  "scripts": {
    "build:release": "node_modules/.bin/electron-packager . HearthstoneTracker --icon=assets/hearthstone --platform=all --arch=all --version=1.2.5 --out=builds/",
    "build:release:mac": "node_modules/.bin/electron-packager . HearthstoneTracker --icon=assets/hearthstone.icns --platform=darwin --arch=x64 --version=1.2.5 --out=builds/",
    "build:release:win": "node_modules/.bin/electron-packager . HearthstoneTracker --icon=assets/hearthstone.ico --platform=win32 --arch=x64 --version=1.2.5 --out=builds/",
    "coverage": "./node_modules/.bin/babel-node ./node_modules/.bin/isparta cover --verbose --include '**/*.jsx' --include '**/*.js' --exclude './builds/**' ./node_modules/.bin/_mocha test",
    "lint": "eslint -c .eslintrc ./**/*.js  ./**/*.jsx",
    "rebuild:leveldb": "cd node_modules/leveldown && HOME=~/.electron-gyp node-gyp rebuild --target=1.2.5 --arch=x64 --dist-url=https://atom.io/download/atom-shell",
    "security:check": "node_modules/.bin/nsp check",
    "start": "electron .",
    "test": "NODE_ENV=test mocha"
  },
  "pre-push": [
    "lint",
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/gregstewart/hearthstone-tracker.git"
  },
  "keywords": [
    "hearthstone",
    "tracker"
  ],
  "author": "Greg Stewart",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gregstewart/hearthstone-tracker/issues"
  },
  "homepage": "https://github.com/gregstewart/hearthstone-tracker#readme",
  "devDependencies": {
    "babel-cli": "6.10.1",
    "babel-eslint": "6.1.0",
    "chai": "3.5.0",
    "codeclimate-test-reporter": "0.3.3",
    "devtron": "1.2.1",
    "electron-packager": "7.1.0",
    "electron-prebuilt": "1.2.5",
    "electron-rebuild": "1.1.3",
    "eslint": "2.13.1",
    "eslint-plugin-react": "5.2.2",
    "isparta": "4.0.0",
    "memdown": "1.2.0",
    "mocha": "2.5.3",
    "mocha-junit-reporter": "1.11.1",
    "nsp": "2.5.0",
    "pre-push": "0.1.1",
    "react-addons-test-utils": "15.1.0",
    "sinon": "1.17.4",
    "sinon-as-promised": "4.0.0",
    "sinon-chai": "2.8.0",
    "winston-loggly": "1.3.1"
  },
  "dependencies": {
    "babel-preset-es2015": "6.9.0",
    "babel-preset-react": "6.5.0",
    "babel-register": "6.9.0",
    "bluebird": "3.4.1",
    "create-file": "1.0.1",
    "datascript-mori": "0.16.0",
    "debug": "2.2.0",
    "flipit": "2.0.3",
    "hearthstone-log-watcher": "3.0.1",
    "pouchdb": "5.4.4",
    "react": "15.1.0",
    "react-dom": "15.1.0",
    "react-redux": "4.4.5",
    "redux": "3.5.2",
    "winston": "2.2.0"
  },
  "engines": {
    "node": "5.1.1"
  }
}
