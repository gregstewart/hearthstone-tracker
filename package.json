{
  "name": "hearthstone-tracker",
  "version": "0.4.1",
  "description": "An electron based Hearthstone tracker",
  "main": "bootstrap-babel.js",
  "scripts": {
    "build:release": "node_modules/.bin/electron-packager . HearthstoneTracker --icon=assets/hearthstone --platform=all --arch=all --version=1.4.13 --out=builds/",
    "build:release:mac": "node_modules/.bin/electron-packager . HearthstoneTracker --icon=assets/hearthstone.icns --platform=darwin --arch=x64 --version=1.4.13 --out=builds/",
    "build:release:win": "node_modules/.bin/electron-packager . HearthstoneTracker --icon=assets/hearthstone.ico --platform=win32 --arch=x64 --version=1.4.13 --out=builds/",
    "coverage": "./node_modules/.bin/cross-env NODE_ENV=test ./node_modules/.bin/nyc --no-cache --reporter=lcov --reporter=text ./node_modules/.bin/_mocha test",
    "lint": "eslint -c .eslintrc ./**/*.js ./**/*.jsx",
    "rebuild:leveldb": "cd node_modules/leveldown && HOME=~/.electron-gyp node-gyp rebuild --target=1.4.13 --arch=x64 --dist-url=https://atom.io/download/atom-shell",
    "security:check": "node_modules/.bin/nsp check",
    "start": "electron .",
    "test": "NODE_ENV=test mocha"
  },
  "pre-push": [
    "lint",
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/gregstewart/hearthstone-tracker.git"
  },
  "keywords": [
    "hearthstone",
    "tracker"
  ],
  "author": "Greg Stewart",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gregstewart/hearthstone-tracker/issues"
  },
  "homepage": "https://github.com/gregstewart/hearthstone-tracker#readme",
  "devDependencies": {
    "babel-cli": "6.18.0",
    "babel-eslint": "7.1.1",
    "babel-plugin-istanbul": "3.1.2",
    "chai": "3.5.0",
    "codeclimate-test-reporter": "0.4.0",
    "cross-env": "3.1.4",
    "devtron": "1.4.0",
    "electron": "1.4.13",
    "electron-packager": "8.4.0",
    "electron-rebuild": "1.5.6",
    "eslint": "3.13.0",
    "eslint-plugin-import": "2.0.1",
    "eslint-plugin-react": "6.9.0",
    "memdown": "1.2.4",
    "mocha": "3.2.0",
    "mocha-junit-reporter": "1.12.2",
    "nsp": "2.6.2",
    "nyc": "10.0.0",
    "pre-push": "0.1.1",
    "react-addons-test-utils": "15.4.2",
    "sinon": "1.17.7",
    "sinon-as-promised": "4.0.2",
    "sinon-chai": "2.8.0"
  },
  "dependencies": {
    "babel-preset-es2015": "6.18.0",
    "babel-preset-react": "6.16.0",
    "babel-register": "6.18.0",
    "bluebird": "3.4.7",
    "create-file": "1.0.1",
    "datascript-mori": "0.16.0",
    "date-fns": "1.21.1",
    "debug": "2.6.0",
    "farseer": "4.0.0",
    "flipit": "2.0.3",
    "pouchdb": "6.1.1",
    "react": "15.4.1",
    "react-dom": "15.4.2",
    "react-redux": "5.0.0",
    "redux": "3.6.0",
    "winston": "2.2.0",
    "winston-loggly": "1.3.1"
  },
  "nyc": {
    "sourceMap": false,
    "instrument": false
  },
  "engines": {
    "node": "6.5.0"
  }
}
