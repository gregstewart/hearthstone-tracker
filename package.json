{
  "name": "hearthstone-tracker",
  "version": "0.4.1",
  "description": "An electron based Hearthstone tracker",
  "main": "bootstrap-babel.js",
  "scripts": {
    "build:release": "node_modules/.bin/electron-packager . HearthstoneTracker --icon=assets/hearthstone --platform=all --arch=all --version=1.6.2 --out=builds/",
    "build:release:mac": "node_modules/.bin/electron-packager . HearthstoneTracker --icon=assets/hearthstone.icns --platform=darwin --arch=x64 --version=1.6.2 --out=builds/",
    "build:release:win": "node_modules/.bin/electron-packager . HearthstoneTracker --icon=assets/hearthstone.ico --platform=win32 --arch=x64 --version=1.6.2 --out=builds/",
    "changelog": "git log `git describe --tags --abbrev=0`..HEAD --pretty=format:' * %s (%an)' | grep -v 'Merge pull request'",
    "coverage": "./node_modules/.bin/cross-env NODE_ENV=test ./node_modules/.bin/nyc --no-cache --reporter=lcov --reporter=text ./node_modules/.bin/_mocha test",
    "lint": "eslint -c .eslintrc ./**/*.js ./**/*.jsx",
    "rebuild:leveldb": "cd node_modules/leveldown && HOME=~/.electron-gyp node-gyp rebuild --target=1.6.2 --arch=x64 --dist-url=https://atom.io/download/atom-shell",
    "security:check": "node_modules/.bin/nsp check",
    "start": "electron .",
    "test": "NODE_ENV=test mocha"
  },
  "pre-push": [
    "lint",
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/gregstewart/hearthstone-tracker.git"
  },
  "keywords": [
    "hearthstone",
    "tracker"
  ],
  "author": "Greg Stewart",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gregstewart/hearthstone-tracker/issues"
  },
  "homepage": "https://github.com/gregstewart/hearthstone-tracker#readme",
  "devDependencies": {
    "babel-cli": "6.24.1",
    "babel-eslint": "7.2.1",
    "babel-plugin-istanbul": "4.1.1",
    "chai": "3.5.0",
    "codeclimate-test-reporter": "0.4.1",
    "cross-env": "4.0.0",
    "devtron": "1.4.0",
    "electron": "1.6.2",
    "electron-packager": "8.6.0",
    "electron-rebuild": "1.5.7",
    "eslint": "3.19.0",
    "eslint-plugin-import": "2.0.1",
    "eslint-plugin-react": "6.10.3",
    "memdown": "1.2.4",
    "mocha": "3.2.0",
    "mocha-junit-reporter": "1.13.0",
    "nsp": "2.6.2",
    "nyc": "10.2.0",
    "pre-push": "0.1.1",
    "react-addons-test-utils": "15.5.1",
    "react-test-renderer": "^15.5.4",
    "sinon": "2.1.0",
    "sinon-chai": "2.9.0"
  },
  "dependencies": {
    "babel-preset-es2015": "6.24.1",
    "babel-preset-react": "6.24.1",
    "babel-register": "6.24.1",
    "bluebird": "3.5.0",
    "create-file": "1.0.1",
    "datascript-mori": "0.16.0",
    "date-fns": "1.28.2",
    "debug": "2.6.3",
    "farseer": "4.0.0",
    "flipit": "2.0.3",
    "pouchdb": "6.1.2",
    "prop-types": "^15.5.4",
    "react": "15.5.3",
    "react-dom": "15.5.3",
    "react-redux": "5.0.4",
    "redux": "3.6.0",
    "winston": "2.3.1",
    "winston-loggly": "1.3.1"
  },
  "nyc": {
    "sourceMap": false,
    "instrument": false
  },
  "engines": {
    "node": "7.4.0"
  }
}
