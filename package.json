{
  "name": "hearthstone-tracker",
  "version": "0.0.1",
  "description": "A electron based Hearthstone tracker",
  "main": "bootstrap-babel.js",
  "scripts": {
    "build:release": "node_modules/.bin/electron-packager . HearthstoneTracker --platform=all --arch=all --version=0.36.4 --out=builds/",
    "lint": "eslint -c .eslintrc ./**/*.js  ./**/*.jsx",
    "rebuild:leveldb": "cd node_modules/pouchdb/node_modules/leveldown && HOME=~/.electron-gyp node-gyp rebuild --target=0.36.4 --arch=x64 --dist-url=https://atom.io/download/atom-shell",
    "rebuild:push": "npm rebuild leveldown",
    "security:check": "node_modules/.bin/check",
    "start": "electron .",
    "test": "NODE_ENV=test mocha --recursive --compilers js:babel-register"
  },
  "pre-push": [
    "rebuild:push",
    "lint",
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/gregstewart/hearthstone-tracker.git"
  },
  "keywords": [
    "hearthstone",
    "tracker"
  ],
  "author": "Greg Stewart",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gregstewart/hearthstone-tracker/issues"
  },
  "homepage": "https://github.com/gregstewart/hearthstone-tracker#readme",
  "devDependencies": {
    "babel-eslint": "4.1.6",
    "bluebird": "3.1.1",
    "chai": "3.4.1",
    "electron-packager": "5.2.0",
    "electron-prebuilt": "0.36.4",
    "eslint": "1.10.3",
    "eslint-plugin-react": "3.14.0",
    "mocha": "2.3.4",
    "mocha-junit-reporter": "1.9.1",
    "nsp": "^2.2.0",
    "pre-push": "0.1.1",
    "sinon": "1.17.2",
    "sinon-chai": "2.8.0"
  },
  "dependencies": {
    "babel-preset-es2015": "6.3.13",
    "babel-preset-react": "6.3.13",
    "babel-register": "6.3.13",
    "create-file": "1.0.1",
    "debug": "^2.2.0",
    "hearthstone-log-watcher": "3.0.1",
    "lodash": "3.10.1",
    "pouchdb": "5.2.0",
    "react": "0.14.5",
    "react-dom": "0.14.5"
  },
  "engines": {
    "node": "4.1.2"
  }
}
