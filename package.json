{
  "name": "hearthstone-tracker",
  "version": "0.4.2",
  "description": "An electron based Hearthstone tracker",
  "main": "bootstrap-babel.js",
  "scripts": {
    "build:release":
      "node_modules/.bin/electron-packager . HearthstoneTracker --icon=assets/hearthstone --platform=all --arch=all --electron-version=1.7.6 --out=builds/",
    "build:release:mac":
      "node_modules/.bin/electron-packager . HearthstoneTracker --icon=assets/hearthstone.icns --platform=darwin --arch=x64 --electron-version=1.7.6 --out=builds/",
    "build:release:win":
      "node_modules/.bin/electron-packager . HearthstoneTracker --icon=assets/hearthstone.ico --platform=win32 --arch=x64 --electron-version=1.7.6 --out=builds/",
    "changelog":
      "git log `git describe --tags --abbrev=0`..HEAD --pretty=format:' * %s (%an)' | grep -v 'Merge pull request'",
    "coverage":
      "./node_modules/.bin/cross-env NODE_ENV=test ./node_modules/.bin/nyc --no-cache --reporter=lcov --reporter=text ./node_modules/.bin/_mocha test",
    "lint": "eslint -c .eslintrc ./**/*.js ./**/*.jsx",
    "rebuild:leveldb":
      "cd node_modules/leveldown && HOME=~/.electron-gyp node-gyp rebuild --target=1.7.6 --arch=x64 --dist-url=https://atom.io/download/atom-shell",
    "security:check": "node_modules/.bin/nsp check",
    "start": "electron .",
    "test": "NODE_ENV=test mocha"
  },
  "pre-push": ["lint", "test"],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/gregstewart/hearthstone-tracker.git"
  },
  "keywords": ["hearthstone", "tracker"],
  "author": "Greg Stewart",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gregstewart/hearthstone-tracker/issues"
  },
  "homepage": "https://github.com/gregstewart/hearthstone-tracker#readme",
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-eslint": "8.0.1",
    "babel-plugin-istanbul": "4.1.5",
    "chai": "4.1.2",
    "codeclimate-test-reporter": "0.5.0",
    "cross-env": "5.0.5",
    "devtron": "1.4.0",
    "electron": "1.7.8",
    "electron-packager": "9.1.0",
    "electron-rebuild": "1.6.0",
    "eslint": "4.7.2",
    "eslint-plugin-import": "2.7.0",
    "eslint-plugin-react": "7.4.0",
    "memdown": "1.3.1",
    "mocha": "3.5.3",
    "mocha-junit-reporter": "1.14.0",
    "nsp": "2.8.1",
    "nyc": "11.2.1",
    "pre-push": "0.1.1",
    "react-addons-test-utils": "15.6.2",
    "react-test-renderer": "^16.0.0",
    "sinon": "4.0.1",
    "sinon-chai": "2.14.0"
  },
  "dependencies": {
    "babel-preset-es2015": "6.24.1",
    "babel-preset-react": "6.24.1",
    "babel-register": "6.26.0",
    "bluebird": "3.5.0",
    "create-file": "1.0.1",
    "datascript-mori": "0.17.0",
    "date-fns": "2.0.0-alpha.1",
    "debug": "3.1.0",
    "farseer": "4.0.0",
    "flipit": "2.0.3",
    "pouchdb": "6.3.4",
    "prop-types": "^15.5.4",
    "react": "16.0.0",
    "react-dom": "16.0.0",
    "react-redux": "5.0.6",
    "redux": "3.7.2",
    "winston": "2.3.1",
    "winston-loggly": "1.3.1"
  },
  "nyc": {
    "sourceMap": false,
    "instrument": false
  },
  "engines": {
    "node": "7.4.0"
  }
}
