{
  "name": "hearthstone-tracker",
  "version": "0.1.3",
  "description": "A electron based Hearthstone tracker",
  "main": "bootstrap-babel.js",
  "scripts": {
    "build:release": "node_modules/.bin/electron-packager . HearthstoneTracker --platform=all --arch=all --version=0.36.7 --out=builds/",
    "coverage": "./node_modules/.bin/babel-node ./node_modules/.bin/isparta cover ./node_modules/.bin/_mocha test",
    "lint": "eslint -c .eslintrc ./**/*.js  ./**/*.jsx",
    "rebuild:leveldb": "cd node_modules/pouchdb/node_modules/leveldown && HOME=~/.electron-gyp node-gyp rebuild --target=0.36.7 --arch=x64 --dist-url=https://atom.io/download/atom-shell",
    "security:check": "node_modules/.bin/nsp check",
    "start": "electron .",
    "test": "NODE_ENV=test mocha"
  },
  "pre-push": [
    "lint",
    "test"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/gregstewart/hearthstone-tracker.git"
  },
  "keywords": [
    "hearthstone",
    "tracker"
  ],
  "author": "Greg Stewart",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gregstewart/hearthstone-tracker/issues"
  },
  "homepage": "https://github.com/gregstewart/hearthstone-tracker#readme",
  "devDependencies": {
    "babel-cli": "^6.4.5",
    "babel-eslint": "4.1.8",
    "chai": "3.5.0",
    "codeclimate-test-reporter": "^0.3.1",
    "electron-packager": "5.2.1",
    "electron-prebuilt": "0.36.7",
    "eslint": "1.10.3",
    "eslint-plugin-react": "3.16.1",
    "isparta": "^4.0.0",
    "memdown": "1.1.2",
    "mocha": "2.4.5",
    "mocha-junit-reporter": "1.9.1",
    "nsp": "^2.2.0",
    "pre-push": "0.1.1",
    "sinon": "1.17.3",
    "sinon-chai": "2.8.0"
  },
  "dependencies": {
    "babel-preset-es2015": "6.3.13",
    "babel-preset-react": "6.3.13",
    "babel-register": "6.4.3",
    "bluebird": "3.2.1",
    "create-file": "1.0.1",
    "debug": "2.2.0",
    "hearthstone-log-watcher": "3.0.1",
    "mori": "0.3.2",
    "pouchdb": "5.2.1",
    "react": "0.14.7",
    "react-dom": "0.14.7",
    "react-redux": "4.2.1",
    "redux": "3.2.1"
  },
  "engines": {
    "node": "4.1.2"
  }
}
